{
  "name": "npm-mcp",
  "command": "npm",
  "description": "NPM CLI as MCP server",
  "environment": {},
  "tools": [
    {
      "name": "npm_install",
      "description": "Install an npm package",
      "parameters": {
        "package": {
          "type": "string",
          "description": "Package name (with optional version, e.g., 'express@4.18.0')",
          "required": true
        },
        "dev": {
          "type": "boolean",
          "description": "Install as dev dependency",
          "default": false
        }
      },
      "command_template": "npm install {package}{#if dev} --save-dev{/if}",
      "output_format": "text",
      "timeout": 120
    },
    {
      "name": "npm_uninstall",
      "description": "Uninstall an npm package",
      "parameters": {
        "package": {
          "type": "string",
          "description": "Package name to uninstall",
          "required": true
        }
      },
      "command_template": "npm uninstall {package}",
      "output_format": "text",
      "timeout": 30
    },
    {
      "name": "npm_run",
      "description": "Run an npm script",
      "parameters": {
        "script": {
          "type": "string",
          "description": "Script name from package.json",
          "required": true
        }
      },
      "command_template": "npm run {script}",
      "output_format": "text",
      "timeout": 300
    },
    {
      "name": "npm_list",
      "description": "List installed packages",
      "parameters": {
        "depth": {
          "type": "integer",
          "description": "Depth of dependency tree to show",
          "default": 0
        }
      },
      "command_template": "npm list --depth={depth}",
      "output_format": "text",
      "timeout": 30
    },
    {
      "name": "npm_outdated",
      "description": "Check for outdated packages",
      "parameters": {},
      "command_template": "npm outdated",
      "output_format": "text",
      "timeout": 30
    }
  ],
  "resources": [
    {
      "uri": "npm://package-json",
      "name": "Package.json",
      "description": "Current package.json contents",
      "command": "cat package.json",
      "mime_type": "application/json"
    }
  ],
  "working_directory": "."
}

